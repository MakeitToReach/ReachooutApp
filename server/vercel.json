{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "build": {
    "env": {
      "DATABASE_URL": "$DATABASE_URL"
    },
    "command": "npx prisma generate && tsc --noEmit && npm run build"
  }
}
